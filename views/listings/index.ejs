<% layout('layouts/boilerplate') -%>
    <h3>Listings</h3>
    <!-- <form method="get" action="/listings/new">
        <button>Create New Listings</button>
    </form> -->

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-small-1 row-cols-1">
    <% for(listing of allListings) {%>
  <a href="/listings/<%=listing._id%>" class="listing-link">
  <div class="card col listing-card">
   <div class="card-img-overlay"></div>
  <img src="<%=listing.image%>" class="card-img-top" alt="listing_img" style="height:20rem">
  <div class="card-body">
    <p class="card-text"><b><%=listing.title%></b> <br>
         &#8377;<%=listing.price.toLocaleString("en-IN")%>/night
    </p>
  </div>
</div>
</a>
<%}%>

</div>

